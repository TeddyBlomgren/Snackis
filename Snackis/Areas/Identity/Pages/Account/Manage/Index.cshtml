@page
@model IndexModel
@{
    ViewData["Title"] = "Hantera konto";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <h4>Profilinformation</h4>
            <hr />

            <!-- Nuvarande profilbild -->
            <div class="mb-3">
                <label>Din nuvarande profilbild:</label><br />
                <img src="@Model.CurrentImage" alt="Profilbild" width="150" class="rounded" />
            </div>

            <!-- Ladda upp bild -->
            <div class="mb-3">
                <label for="UploadImage">Ladda upp ny bild (jpg/jpeg/png/bmp/webp):</label>
                <input type="file" name="UploadImage" class="form-control" />
            </div>



            <div class="mb-3">
                <label for="Input.PhoneNumber" class="form-label">Telefonnummer</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">Spara ändringar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
