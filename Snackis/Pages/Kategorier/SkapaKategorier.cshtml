@page
@model Snackis.Pages.Kategorier.SkapaKategorierModel
@{
    ViewData["Title"] = "Skapa ny kategori";
}

<h2>Skapa ny kategori</h2>


<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form method="post" enctype="multipart/form-data">


    <div class="form-group">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category.Description"></label>
        <textarea asp-for="Category.Description" class="form-control"></textarea>
        <span asp-validation-for="Category.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Välj bildfil</label>
        <input asp-for="ImageFile" type="file" class="form-control-file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Spara kategori</button>
    <a asp-page="Kategorier" class="btn btn-secondary">Avbryt</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
